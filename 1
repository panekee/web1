    <script>
        // Function to show article details
        function showArticle(id) {
            // Hide all article details
            var details = 
document.getElementsByClassName('article-detail');
            for (var i = 0; i < details.length; i++) {
                details[i].classList.remove('active');
            }
            
            // Show the selected article detail
            document.getElementById('article-detail-' + 
id.split('article').pop()).classList.add('active');
            
            // Update active article item
            var items = document.getElementsByClassName('article-item');
            for (var j = 0; j < items.length; j++) {
                items[j].classList.remove('active');
            }
            document.getElementById(id).classList.add('active');
        }
        
        // Function to go back to the list
        function goBack() {
            // Hide all article details
            var details = 
document.getElementsByClassName('article-detail');
            for (var i = 0; i < details.length; i++) {
                details[i].classList.remove('active');
            }
            
            // Remove active class from all article items
            var items = document.getElementsByClassName('article-item');
            for (var j = 0; j < items.length; j++) {
                items[j].classList.remove('active');
            }
            
            // Show the first article as active
            document.getElementById('article1').classList.add('active');
        }
        
        // Add click event listeners to all article items
        var items = document.getElementsByClassName('article-item');
        for (var i = 0; i < items.length; i++) {
            items[i].addEventListener('click', function() {
                // Remove active class from all items
                for (var j = 0; j < items.length; j++) {
                    items[j].classList.remove('active');
                }
                
                // Add active class to clicked item
                this.classList.add('active');
                
                // Show the corresponding article detail
                var id = this.id;
                showArticle(id);
            });
        }
        
        // Show the first article by default
        document.getElementById('article1').classList.add('active');
        showArticle('article1');
    </script>
